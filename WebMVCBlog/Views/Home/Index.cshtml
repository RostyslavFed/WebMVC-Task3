@using WebMVCBlog.App_Code;
@using WebMVCBlog.Models.ViewModel;
@model IndexViewModel

<div class="bg-light">
    <div class="container pt-2 pb-2">
        <div class="row">
            <div class="col-md-10 p-2 bg-info text-center">
                @Html.DisplayArticles(Model.ArticleVMs, x => Url.Action("Index", new { page = x }), y => Url.Action("Index", new { fullDisplayId = y }));

                @if (Model.PageInfo.TotalPages > 1)
                {
                    <div class="row m-3 p-3 col-md-4">
                        <div class="btn-group">
                            @Html.PageLinks(Model.PageInfo, x => Url.Action("Index", new { page = x }))
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-2 bg-light border border-primary">
                <nav class="nav nav-pills d-md-inline-block">
                    <a class="nav-link active" href="/Home/Index">Home</a>
                    <a class="nav-link" href="/Home/Guest">Guest</a>
                    <a class="nav-link" href="/Home/Questionnaire">Questionnaire</a>
                </nav>
                <div col-md-2 bg-light text-center>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="radio" name="exampleRadios" value="Нравится сайт" checked>
                        <label class="form-check-label">
                            Нравится сайт
                        </label>
                    </div>
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="exampleRadios" value="Не нравится сайт">
                        <label class="form-check-label">
                            Не нравится сайт
                        </label>
                    </div>
                    <button type="button" class="btn btn-primary mt-2">Голосовать</button>
                </div>
            </div>
        </div>
    </div>
</div>